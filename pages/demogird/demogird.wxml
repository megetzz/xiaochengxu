<!--pages/demogird.wxml-->
<text>pages/demogird.wxml</text>
<view class="page">
    <view class="page__hd">
        <view class="page__title">Grid</view>
        <view class="page__desc">计算机专业基础知识</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <!-- 列表渲染 -->
            <block wx:for="{{grids}}" wx:key="*this">
                <navigator url="http://www.baidu.com" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="../images/icon_tabbar.png" />
                    <view class="weui-grid__label"> {{item}}</view>
                </navigator>
            </block>
        </view>
    </view>

</view>